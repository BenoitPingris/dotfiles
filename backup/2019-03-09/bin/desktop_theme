#!/bin/sh


function help {
    cat <<EOF
USAGE
	$0 /path/to/image

DESCRIPTION
	set a wallpaper and add colors on the bar (qlite only)

FLAGS
	-h --help	show this help
EOF
    exit 0
}

main() {
    if [ -f $1 ]
    then
	colorz $1 --no-preview | cut -d' ' -f1 > ~/.config/qtile/colors_schemes
	qtile-cmd -o cmd -f restart 2>/dev/null
	feh --bg-scale $1
    else
	echo "$1 is not a valid image !"
	exit 1
    fi
}

case $1 in
    --help|-h)
	help;;
    *)
	main $1
esac
