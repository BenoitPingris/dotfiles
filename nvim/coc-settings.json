{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescriptreact",
    "prisma",
    "json",
    "dart",
    "python",
    "python3",
    "vue",
    "go"
  ],
  "flutter.provider.hot-reload": true,
  "flutter.provider.enableSnippet": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  }
}
