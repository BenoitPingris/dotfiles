#!/bin/sh
#
# http://github.com/mitchweaver/bin
#
# increments/decrements brightness, clamping to not
# allow screen to go blank
#

xbacklight -inc "$1"
LIGHT=$(echo $(xbacklight -get) | awk '{printf("%d\n",$1 + 0.5)}')
if [ $LIGHT -lt 2 ]; then
    xbacklight -set 2
fi


# printf %0.f%%\\n $(xbacklight -get)
